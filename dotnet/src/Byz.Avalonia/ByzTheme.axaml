<Styles x:Class="Byz.Avalonia.Theme.ByzTheme"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="Theme/VariantSelector.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Styles.Resources>

  <Styles>
    <Style Selector="TextBlock">
      <Setter Property="FontFamily" Value="Segoe UI"/>
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="Foreground" Value="{DynamicResource Ui.Foreground}"/>
    </Style>
    <Style Selector="AccessText">
      <Setter Property="FontFamily" Value="Segoe UI"/>
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="Foreground" Value="{DynamicResource Ui.Foreground}"/>
    </Style>
  </Styles>
  
  
  
  <StyleInclude Source="Theme/ByzWindow.axaml" />
  <StyleInclude Source="Theme/Button.axaml" />
  <StyleInclude Source="Theme/Expander.axaml" />
</Styles>